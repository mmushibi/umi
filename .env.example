# Umi Health - Complete Docker Environment Configuration
# Copy this file to .env and fill in actual values before running docker-compose

# ========================================
# PostgreSQL Configuration
# ========================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_USER=umihealth
POSTGRES_DB=UmiHealth

# ========================================
# Redis Configuration
# ========================================
REDIS_PASSWORD=your_secure_redis_password_here

# ========================================
# JWT Configuration
# ========================================
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_ISSUER=UmiHealth
JWT_AUDIENCE=UmiHealthUsers

# ========================================
# Email/SMTP Configuration
# ========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
SMTP_FROM_EMAIL=noreply@umihealth.com
SMTP_FROM_NAME=Umi Health

# ========================================
# SMS Provider Configuration
# ========================================
# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Nexmo
NEXMO_API_KEY=your-nexmo-api-key
NEXMO_API_SECRET=your-nexmo-api-secret

# Africa's Talking
AT_API_KEY=your-africas-talking-api-key
AT_USERNAME=your-africas-talking-username

# ========================================
# Payment Provider Configuration
# ========================================
# MTN Mobile Money
MTN_API_KEY=your-mtn-api-key
MTN_API_USER=your-mtn-api-user

# Airtel Money
AIRTEL_API_KEY=your-airtel-api-key
AIRTEL_CLIENT_ID=your-airtel-client-id

# ========================================
# Azure Configuration (Optional)
# ========================================
AZURE_STORAGE_CONNECTION_STRING=
AZURE_SERVICE_BUS_CONNECTION_STRING=

# ========================================
# Application Configuration
# ========================================
ASPNETCORE_ENVIRONMENT=Production
LOG_LEVEL=Information

# ========================================
# Grafana Configuration
# ========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password

# ========================================
# Monitoring & Performance
# ========================================
PROMETHEUS_RETENTION_DAYS=30
SERILOG_MIN_LEVEL=Information

# ========================================
# Compliance Configuration (Zambia)
# ========================================
PHARMACY_LICENSE_NUMBER=
PHARMACIST_REGISTRATION_NUMBER=
TAX_PAYER_PIN=

# ========================================
# Feature Flags
# ========================================
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ANALYTICS=true
ENABLE_COMPLIANCE_REPORTING=true
ENABLE_DATA_EXPORT=true

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=10

# ========================================
# API Configuration
# ========================================
API_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
API_SWAGGER_ENABLED=true

# ========================================
# Timezone & Localization
# ========================================
TIMEZONE=Africa/Lusaka
CULTURE=en-ZM
CURRENCY=ZMW

# ========================================
# Backup & Maintenance
# ========================================
BACKUP_RETENTION_DAYS=30
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
API_BASE_URL=https://api.umihealth.com
IDENTITY_SERVICE_URL=https://identity.umihealth.com

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# External API Keys (if needed)
EXTERNAL_API_KEY=your_external_api_key_here
PAYMENT_PROVIDER_KEY=your_payment_provider_key_here

# Monitoring Configuration
PROMETHEUS_RETENTION=200h
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# Development Override
# Uncomment for development
# ASPNETCORE_ENVIRONMENT=Development
# API_BASE_URL=http://localhost:5000
# IDENTITY_SERVICE_URL=http://localhost:5001
