            <button class="stat-button" data-stat="total-products">
              <span>Total Products</span>
              <strong id="totalProductsCount" x-text="totalProducts"></strong>
            </button>
            <button class="stat-button" data-stat="low-stock">
              <span>Low Stock</span>
              <strong id="lowStockCount" x-text="lowStockItems"></strong>
            </button>
            <button class="stat-button" data-stat="out-of-stock">
              <span>Out of Stock</span>
              <strong id="outOfStockCount" x-text="outOfStockItems"></strong>
            </button>
            <button class="stat-button" data-stat="expiring">
              <span>Expiring Soon</span>
              <strong id="expiringCount" x-text="expiringItems"></strong>
            </button>
          </div>
          <div class="header-actions">
            <button class="secondary-btn" @click="scanBarcode()" type="button">
              <i class="fi fi-rr-camera" aria-hidden="true"></i>
              Scan Barcode
            </button>
            <button class="secondary-btn" id="importButton" type="button" data-permission="manage_inventory">
              <i class="fi fi-rr-upload" aria-hidden="true"></i>
              Import
            </button>
            <button class="secondary-btn" id="exportButton" type="button">
              <i class="fi fi-rr-download" aria-hidden="true"></i>
              Export
            </button>
            <button class="add-product-btn" id="addProductButton" type="button">
              <i class="fi fi-rr-plus" aria-hidden="true"></i>
              Add Product
            </button>
          </div>
        </div>

        <div class="widgets-row">
          <article class="widget">
            <header class="widget-header">
              <div>
                <h3 class="widget-title">Stock Levels</h3>
                <p class="widget-subtitle">Current inventory status</p>
              </div>
              <button class="icon-button" type="button" data-menu="stock" aria-haspopup="true"
                aria-expanded="false" aria-controls="stockMenu" aria-label="Stock menu">
                <i class="fi fi-rr-menu-dots" aria-hidden="true"></i>
              </button>
              <div class="widget-menu" id="stockMenu" hidden>
                <button type="button" data-action="refresh-stock"><i class="fi fi-rr-refresh" aria-hidden="true"></i>Refresh data</button>
                <button type="button" data-action="view-report"><i class="fi fi-rr-chart-line-up" aria-hidden="true"></i>View detailed report</button>
              </div>
            </header>
            <div class="chart-container">
              <canvas id="stockChart" aria-label="Stock levels overview"></canvas>
            </div>
          </article>

          <article class="widget">
            <header class="widget-header">
              <div>
                <h3 class="widget-title">Category Distribution</h3>
                <p class="widget-subtitle">Products by category</p>
              </div>
              <button class="icon-button" type="button" data-menu="category" aria-haspopup="true"
                aria-expanded="false" aria-controls="categoryMenu" aria-label="Category menu">
                <i class="fi fi-rr-menu-dots" aria-hidden="true"></i>
              </button>
              <div class="widget-menu" id="categoryMenu" hidden>
                <button type="button" data-action="refresh-category"><i class="fi fi-rr-refresh" aria-hidden="true"></i>Refresh data</button>
                <button type="button" data-action="export-category"><i class="fi fi-rr-download" aria-hidden="true"></i>Export report</button>
              </div>
            </header>
            <div class="chart-container">
              <canvas id="categoryChart" aria-label="Category distribution"></canvas>
            </div>
          </article>

          <article class="widget">
            <header class="widget-header">
              <div>
                <h3 class="widget-title">Expiry Tracking</h3>
                <p class="widget-subtitle">Products expiring in next 30 days</p>
              </div>
              <button class="icon-button" type="button" data-menu="expiry" aria-haspopup="true"
                aria-expanded="false" aria-controls="expiryMenu" aria-label="Expiry menu">
                <i class="fi fi-rr-menu-dots" aria-hidden="true"></i>
              </button>
              <div class="widget-menu" id="expiryMenu" hidden>
                <button type="button" data-action="refresh-expiry"><i class="fi fi-rr-refresh" aria-hidden="true"></i>Refresh list</button>
                <button type="button" data-action="view-all-expiry"><i class="fi fi-rr-list" aria-hidden="true"></i>View all expiring</button>
              </div>
            </header>
            <div class="expiry-list" id="expiryList">
              <template x-for="product in expiringSoonProducts" :key="product.id">
                <div class="expiry-item" :class="{
                  'critical': isExpiryCritical(product.expiryDate),
                  'warning': isExpiryWarning(product.expiryDate)
                }">
                  <div class="expiry-product-info">
                    <div class="expiry-product-name" x-text="product.brandName"></div>
                    <div class="expiry-product-details" x-text="product.genericName + ' - ' + product.strength"></div>
                  </div>
                  <div class="expiry-date-info">
                    <div class="expiry-date" x-text="formatDate(product.expiryDate)"></div>
                    <div class="expiry-days" x-text="getExpiryDays(product.expiryDate)"></div>
                  </div>
                </div>
              </template>
              <div x-show="expiringSoonProducts.length === 0" class="no-expiry-items">
                <p>No items expiring in the next 30 days</p>
              </div>
            </div>
          </article>
        </div>

        <article class="product-list-container">
          <header class="product-list-header">
            <div>
              <h2>Product Inventory</h2>
              <span>Manage your pharmacy products and stock levels</span>
            </div>
          </header>

          <div class="table-controls">
            <div class="control-group">
              <label class="table-search">
                <i class="fi fi-rr-search" aria-hidden="true"></i>
                <input id="productSearchInput" type="search" placeholder="Search products by name, code or category"
                  autocomplete="off">
                <div class="search-autocomplete" id="productSearchAutocomplete" role="listbox" hidden></div>
              </label>
              <button class="icon-button" id="filterToggle" type="button" aria-haspopup="true" aria-expanded="false"
                aria-controls="filterPanel" title="Filters">
                <i class="fi fi-rr-filter" aria-hidden="true"></i>
              </button>
              <button class="icon-button" id="sortToggle" type="button" aria-haspopup="true" aria-expanded="false"
                aria-controls="sortPanel" title="Sort">
                <i class="fi fi-rr-bars-sort" aria-hidden="true"></i>
              </button>
              <button class="icon-button" id="columnsToggle" type="button" aria-haspopup="true" aria-expanded="false"
                aria-controls="columnsPanel" title="Manage columns">
                <i class="fi fi-rr-table-columns" aria-hidden="true"></i>
              </button>
            </div>
            <div class="nav-actions">
              <button class="control-button" @click="startStocktake('cycle')" type="button">
                <i class="fi fi-rr-clipboard-check" aria-hidden="true"></i>
                Stocktake
              </button>
              <button class="control-button" @click="createReorderList()" type="button">
                <i class="fi fi-rr-shopping-cart" aria-hidden="true"></i>
                Reorder Stock
              </button>
              <button class="control-button" type="button" data-action="bulk-edit">
                <i class="fi fi-rr-edit" aria-hidden="true"></i>
                Bulk Edit
              </button>
              <button class="control-button" type="button" data-action="print-labels">
                <i class="fi fi-rr-print" aria-hidden="true"></i>
                Print Labels
              </button>
            </div>
          </div>
          <div class="table-scroll">
            <table class="product-table" id="productTable" aria-live="polite">
              <thead>
                <tr>
                  <th scope="col" data-column="select">
                    <input type="checkbox" id="selectAll" aria-label="Select all products">
                  </th>
                  <th scope="col" data-column="sku">Product Code</th>
                  <th scope="col" data-column="name">Product Details</th>
                  <th scope="col" data-column="category">Category</th>
                  <th scope="col" data-column="supplier">Supplier</th>
                  <th scope="col" data-column="batch">Batch/Lot</th>
                  <th scope="col" data-column="stock">Stock</th>
                  <th scope="col" data-column="price">Unit Price</th>
                  <th scope="col" data-column="expiry">Expiry Date</th>
                  <th scope="col" data-column="status">Status</th>
                  <th scope="col" data-column="actions">Actions</th>
                </tr>
              </thead>
              <tbody id="productTableBody">
                <template x-for="product in filteredProducts" :key="product.id">
                  <tr>
                    <td>
                      <input type="checkbox" :value="product.id" aria-label="Select product">
                    </td>
                    <td x-text="product.id"></td>
                    <td>
                      <div class="product-info">
                        <div class="product-name" x-text="product.brandName"></div>
                        <div class="product-generic" x-text="product.genericName"></div>
                        <div class="product-details" x-show="product.strength || product.form">
                          <span x-text="product.strength || ''"></span>
                          <span x-text="product.form ? ' - ' + product.form : ''"></span>
                          <span x-text="product.unit ? ' (' + product.unit + ')' : ''"></span>
                        </div>
                      </div>
                    </td>
                    <td x-text="product.category"></td>
                    <td x-text="product.supplier || 'N/A'"></td>
                    <td x-text="product.batchNumber || 'N/A'"></td>
                    <td>
                      <div class="stock-info">
                        <span class="stock-badge" :class="{
                          'in-stock': product.stockQuantity > product.lowStockThreshold,
                          'low-stock': product.stockQuantity > 0 && product.stockQuantity <= product.lowStockThreshold,
                          'out-of-stock': product.stockQuantity <= 0
                        }" x-text="product.stockQuantity + ' ' + (product.unit || 'units')"></span>
                        <div class="stock-threshold" x-show="product.lowStockThreshold">
                          <small>Min: <span x-text="product.lowStockThreshold"></span></small>
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="price-info">
                        <div x-text="formatCurrency(product.sellingPrice)"></div>
                        <small class="cost-price">Cost: <span x-text="formatCurrency(product.costPrice)"></span></small>
                      </div>
                    </td>
                    <td>
                      <div class="expiry-info" :class="{
                        'expiry-critical': isExpiryCritical(product.expiryDate),
                        'expiry-warning': isExpiryWarning(product.expiryDate),
                        'expiry-ok': !isExpiryWarning(product.expiryDate)
                      }">
                        <div x-text="formatDate(product.expiryDate)"></div>
                        <small x-text="getExpiryDays(product.expiryDate)"></small>
                      </div>
                    </td>
                    <td>
                      <span class="status-badge" :class="{
                        'in-stock': product.status === 'In Stock',
                        'low-stock': product.status === 'Low Stock',
                        'out-of-stock': product.status === 'Out of Stock'
                      }" x-text="product.status"></span>
                    </td>
                    <td>
                      <div class="action-buttons">
                        <button class="action-btn edit" @click="editProduct(product)" title="Edit product">
                          <i class="fi fi-rr-edit" aria-hidden="true"></i>
                        </button>
                        <button class="action-btn barcode" @click="printBarcode(product.id, 1)" title="Print barcode">
                          <i class="fi fi-rr-barcode" aria-hidden="true"></i>
                        </button>
                        <button class="action-btn delete" @click="deleteProduct(product)" title="Delete product">
                          <i class="fi fi-rr-trash" aria-hidden="true"></i>
                        </button>
                      </div>
                    </td>
                  </tr>
                </template>
              </tbody>
            </table>
          </div>

          <div class="table-empty" id="productEmptyState" hidden>
            <i class="fi fi-rr-box" aria-hidden="true"></i>
            <p>No products match your filters. Adjust search or filters to view results.</p>
          </div>

          <footer class="pagination" id="pagination" hidden>
            <div class="pagination-info" id="paginationInfo"></div>
            <div class="pagination-controls" id="paginationControls"></div>
            <div class="pagination-show">
              <label>
                Show
                <select id="pageSizeSelect" aria-label="Select page size">
                  <option value="10">10</option>
                  <option value="20">20</option>
                  <option value="50">50</option>
                </select>
                entries
              </label>
            </div>
          </footer>
          
        </article>
      </section>
  </main>

  <div class="overlay" id="modalOverlay" hidden></div>

  <section class="modal" id="productModal" role="dialog" aria-modal="true" aria-labelledby="productModalTitle"
    hidden>
    <div class="modal-content">
      <header class="modal-header">
        <h2 id="productModalTitle">Add Product</h2>
        <button type="button" class="modal-close" data-close="productModal" aria-label="Close add product form">
          <i class="fi fi-rr-cross" aria-hidden="true"></i>
        </button>
      </header>
      <form id="productForm" class="modal-body">
        <div class="form-grid">
          <label>
            <span>Brand Name</span>
            <input type="text" id="formProductName" name="productName" required>
          </label>
          <label>
            <span>Generic Name</span>
            <input type="text" id="formGenericName" name="genericName" required>
          </label>
          <label>
            <span>Category</span>
            <select id="formCategory" name="category" required>
              <option value="">Select category</option>
              <option value="Antibiotics">Antibiotics</option>
              <option value="Analgesics">Analgesics</option>
              <option value="Antimalarials">Antimalarials</option>
              <option value="Antihypertensives">Antihypertensives</option>
              <option value="Diabetes">Diabetes</option>
              <option value="Vitamins & Supplements">Vitamins & Supplements</option>
              <option value="OTC">OTC</option>
              <option value="Community Health">Community Health</option>
              <option value="Endocrinology">Endocrinology</option>
            </select>
          </label>
          <label>
            <span>Strength</span>
            <input type="text" id="formStrength" name="strength" placeholder="e.g., 500mg, 10ml">
          </label>
          <label>
            <span>Form</span>
            <select id="formForm" name="form">
              <option value="">Select form</option>
              <option value="Tablet">Tablet</option>
              <option value="Capsule">Capsule</option>
              <option value="Syrup">Syrup</option>
              <option value="Injection">Injection</option>
              <option value="Ointment">Ointment</option>
              <option value="Cream">Cream</option>
              <option value="Drops">Drops</option>
              <option value="Inhaler">Inhaler</option>
              <option value="Patch">Patch</option>
              <option value="Powder">Powder</option>
            </select>
          </label>
          <label>
            <span>Unit</span>
            <select id="formUnit" name="unit">
              <option value="">Select unit</option>
              <option value="Pieces">Pieces</option>
              <option value="Boxes">Boxes</option>
              <option value="Bottles">Bottles</option>
              <option value="Vials">Vials</option>
              <option value="Tubes">Tubes</option>
              <option value="Packs">Packs</option>
            </select>
          </label>
          <label>
            <span>Supplier</span>
            <input type="text" id="formSupplier" name="supplier" placeholder="Supplier name">
          </label>
          <label>
            <span>Batch/Lot Number</span>
            <input type="text" id="formBatchNumber" name="batchNumber" required>
          </label>
          <label>
            <span>Manufacture Date</span>
            <input type="date" id="formManufactureDate" name="manufactureDate" required>
          </label>
          <label>
            <span>Expiry Date</span>
            <input type="date" id="formExpiry" name="expiryDate" required>
          </label>
          <label>
            <span>License Number</span>
            <input type="text" id="formLicenseNumber" name="licenseNumber" required>
          </label>
          <label>
            <span>Zambia REG Number</span>
            <input type="text" id="formZambiaRegNumber" name="zambiaRegNumber" required>
          </label>
          <label>
            <span>Packing Type</span>
            <select id="formPackingType" name="packingType" required>
              <option value="">Select packing type</option>
              <option value="Box">Box</option>
              <option value="Blister">Blister</option>
              <option value="Bottle">Bottle</option>
              <option value="Tube">Tube</option>
              <option value="Sachet">Sachet</option>
              <option value="Vial">Vial</option>
              <option value="Ampoule">Ampoule</option>
            </select>
          </label>
          <label>
            <span>Cost Price (ZMW)</span>
            <input type="number" id="formCostPrice" name="costPrice" min="0" step="0.01" required>
          </label>
          <label>
            <span>Selling Price (ZMW)</span>
            <input type="number" id="formSellingPrice" name="sellingPrice" min="0" step="0.01" required>
          </label>
          <label>
            <span>Stock Quantity</span>
            <input type="number" id="formStock" name="stockQuantity" min="0" required>
          </label>
          <label>
            <span>Low Stock Threshold</span>
            <input type="number" id="formLowStockThreshold" name="lowStockThreshold" min="0" value="10">
          </label>
        </div>
        <label class="form-textarea">
          <span>Description</span>
          <textarea id="formDescription" name="description" rows="3"
            placeholder="Add optional notes about the product"></textarea>
        </label>
      </form>
      <footer class="modal-footer">
        <button type="button" class="secondary" data-close="productModal">Cancel</button>
        <button type="submit" form="productForm" class="primary" id="submitProduct">Save &amp; Continue</button>
      </footer>
    </div>
  </section>

  <section class="modal" id="bulkUploadModal" role="dialog" aria-modal="true" aria-labelledby="bulkUploadModalTitle"
    hidden>
    <div class="modal-content">
      <header class="modal-header">
        <h2 id="bulkUploadModalTitle">Bulk Upload Products</h2>
        <button type="button" class="modal-close" data-close="bulkUploadModal" aria-label="Close bulk upload">
          <i class="fi fi-rr-cross" aria-hidden="true"></i>
        </button>
      </header>
      <div class="modal-body">
        <div class="upload-instructions">
          <h3>Instructions</h3>
          <p>Upload a CSV file with the following columns:</p>
          <ul>
            <li>Brand Name</li>
            <li>Generic Name</li>
            <li>Category</li>
            <li>Manufacture Date</li>
            <li>Batch Number</li>
            <li>License Number</li>
            <li>Zambia REG Number</li>
            <li>Packing Type</li>
            <li>Cost Price</li>
            <li>Selling Price</li>
            <li>Stock Quantity</li>
            <li>Expiry Date</li>
            <li>Description (optional)</li>
          </ul>
          <button class="secondary-btn" id="downloadTemplateBtn">
            <i class="fi fi-rr-download" aria-hidden="true"></i>
            Download Template
          </button>
        </div>
        <div class="upload-area">
          <label for="bulkFileInput" class="upload-label">
            <i class="fi fi-rr-upload" aria-hidden="true"></i>
            <span>Choose CSV file or drag and drop</span>
            <input type="file" id="bulkFileInput" accept=".csv" hidden>
          </label>
          <div class="file-info" id="fileInfo" hidden>
            <span id="fileName"></span>
            <button type="button" class="remove-file" id="removeFile" title="Remove file">
              <i class="fi fi-rr-cross" aria-hidden="true"></i>
            </button>
          </div>
        </div>
        <div class="upload-preview" id="uploadPreview" hidden>
          <h4>Preview</h4>
          <div class="preview-table">
            <table>
              <thead>
                <tr>
                  <th>Brand Name</th>
