  <!-- Alpine.js Component -->
  <script>
    function inventorySystem() {
      return {
        sidebarOpen: false,
        searchQuery: '',
        showFilterMenu: false,
        showAddModal: false,
        // User and pharmacy info
        pharmacyInfo: {
          name: 'Umi Health',
          location: 'Lusaka, Zambia'
        },
        userInfo: {
          name: 'Umi Health',
          role: 'Admin',
          initials: 'UH'
        },
        products: [],
        
        // Real-time stock tracking
        stockHistory: [],
        lastStockUpdate: null,
        
        // Dashboard metrics
        totalProducts: 0,
        lowStockItems: 0,
        outOfStockItems: 0,
        expiringItems: 0,
        totalStockValue: 0,
        
        // Filters and search
        selectedCategory: '',
        stockStatusFilter: 'all',
        sortBy: 'name',
        sortOrder: 'asc',
        
        // Data sync and API integration
        loading: false,
        
        init() {
          this.loadPharmacyInfo();
          this.loadInventoryFromAPI();
          this.setupEventListeners();
        },

        // Load pharmacy info from localStorage
        loadPharmacyInfo() {
          try {
            const currentTenant = localStorage.getItem('umi_current_tenant');
            if (currentTenant) {
              const tenant = JSON.parse(currentTenant);
              this.pharmacyInfo = {
                name: tenant.name || 'Umi Health',
                location: `${tenant.city || 'Lusaka'}, ${tenant.province || 'Zambia'}`
              };
            }
          } catch (error) {
            console.error('Error loading pharmacy info:', error);
          }
        },
        
        loadInventoryFromAPI() {
          this.loading = true;
          this.lastStockUpdate = new Date();
          try {
            window.adminDataSync.getData('products', {
              page: 1,
              pageSize: 50,
              category: this.selectedCategory,
              search: this.searchQuery
            })
            .then(products => {
              this.products = products.map(p => ({
                id: p.id,
                brandName: p.brandName,
                genericName: p.genericName,
                category: p.category,
                stockQuantity: p.stockQuantity,
                lowStockThreshold: p.lowStockThreshold || 10,
                costPrice: p.costPrice,
                sellingPrice: p.sellingPrice,
                expiryDate: p.expiryDate,
                batchNumber: p.batchNumber,
                supplier: p.supplier,
                strength: p.strength,
                form: p.form,
                unit: p.unit,
                lastUpdated: p.lastUpdated,
                status: this.getStockStatus(p.stockQuantity, p.lowStockThreshold || 10)
              }));
              
              // Update dashboard metrics with real-time data
              this.updateDashboardMetrics();
              
              // Track stock history for real-time monitoring
              this.trackStockChanges();
              
              this.loading = false;
              this.showSuccess('Inventory loaded successfully');
            })
            .catch(error => {
              console.error('Error loading inventory:', error);
              this.showError('Failed to load inventory. Please try again.');
              this.loading = false;
            });
          } catch (error) {
            console.error('Data sync not available:', error);
            this.loading = false;
          }
        },
        
        // Real-time stock tracking methods
        updateDashboardMetrics() {
          this.totalProducts = this.products.length;
          this.lowStockItems = this.products.filter(p => p.stockQuantity <= p.lowStockThreshold && p.stockQuantity > 0).length;
          this.outOfStockItems = this.products.filter(p => p.stockQuantity <= 0).length;
          this.expiringItems = this.products.filter(p => {
            const expiryDate = new Date(p.expiryDate);
            const thirtyDaysFromNow = new Date();
            thirtyDaysFromNow.setDate(thirtyDaysFromNow.getDate() + 30);
            return expiryDate <= thirtyDaysFromNow;
          }).length;
          
          // Calculate total stock value
          this.totalStockValue = this.products.reduce((total, product) => {
            return total + (product.stockQuantity * product.costPrice);
          }, 0);
        },

        trackStockChanges() {
          const currentStock = this.products.map(p => ({
            id: p.id,
            quantity: p.stockQuantity,
            timestamp: new Date(),
            action: 'load'
          }));
          
          this.stockHistory.push(...currentStock);
          
          // Keep only last 1000 entries to prevent memory issues
          if (this.stockHistory.length > 1000) {
            this.stockHistory = this.stockHistory.slice(-1000);
          }
        },

        getStockStatus(quantity, threshold) {
          if (quantity <= 0) return 'Out of Stock';
          if (quantity <= threshold) return 'Low Stock';
          return 'In Stock';
        },

        updateStockQuantity(productId, newQuantity, reason = 'Manual adjustment') {
          const product = this.products.find(p => p.id === productId);
          if (product) {
            const oldQuantity = product.stockQuantity;
            product.stockQuantity = newQuantity;
            product.status = this.getStockStatus(newQuantity, product.lowStockThreshold);
            product.lastUpdated = new Date();
            
            // Track this change
            this.stockHistory.push({
              id: productId,
              oldQuantity: oldQuantity,
              newQuantity: newQuantity,
              timestamp: new Date(),
              reason: reason,
              action: 'adjustment'
            });
            
            // Update metrics
            this.updateDashboardMetrics();
            
            // Show notification for significant changes
            if (oldQuantity !== newQuantity) {
              if (newQuantity <= 0) {
                this.showWarning(`${product.brandName} is now out of stock`);
              } else if (newQuantity <= product.lowStockThreshold) {
                this.showWarning(`${product.brandName} is running low on stock`);
              }
            }
          }
        },

        setupEventListeners() {
          if (window.adminDataSync) {
            window.adminDataSync.on('products-updated', (products) => {
              this.products = products.map(p => ({
                id: p.id,
                brandName: p.brandName,
                genericName: p.genericName,
                category: p.category,
                stockQuantity: p.stockQuantity,
                lowStockThreshold: p.lowStockThreshold,
                costPrice: p.costPrice,
                sellingPrice: p.sellingPrice,
                expiryDate: p.expiryDate,
                status: p.stockQuantity <= 0 ? 'Out of Stock' : 
                       p.stockQuantity <= p.lowStockThreshold ? 'Low Stock' : 'In Stock'
              }));
              
              // Update dashboard metrics
              this.totalProducts = products.length;
              this.lowStockItems = products.filter(p => p.stockQuantity <= p.lowStockThreshold).length;
              this.outOfStockItems = products.filter(p => p.stockQuantity <= 0).length;
              this.expiringItems = products.filter(p => {
                const expiryDate = new Date(p.expiryDate);
                const thirtyDaysFromNow = new Date();
                thirtyDaysFromNow.setDate(thirtyDaysFromNow.getDate() + 30);
                return expiryDate <= thirtyDaysFromNow;
              }).length;
            });

            window.adminDataSync.on('sync-error', (error) => {
              console.error('Sync error:', error);
              this.showWarning('Data synchronization error occurred');
            });
          }
        },
        
        // Notification methods
        showSuccess(message) {
          this.showNotification(message, 'success');
        },

        showError(message) {
          this.showNotification(message, 'error');
        },

        showWarning(message) {
          this.showNotification(message, 'warning');
        },

        showNotification(message, type = 'info') {
          // Create notification element
          const notification = document.createElement('div');
          notification.className = `notification notification-${type}`;
          notification.textContent = message;
          document.body.appendChild(notification);

          // Animate in
          setTimeout(() => {
            notification.classList.add('show');
          }, 100);

          // Remove after 5 seconds
          setTimeout(() => {
            notification.classList.remove('show');
            setTimeout(() => {
              if (notification.parentNode) {
                document.body.removeChild(notification);
              }
            }, 300);
          }, 5000);
        },

        get expiringSoonProducts() {
          const thirtyDaysFromNow = new Date();
          thirtyDaysFromNow.setDate(thirtyDaysFromNow.getDate() + 30);
          
          return this.products
            .filter(product => {
              if (!product.expiryDate) return false;
              const expiryDate = new Date(product.expiryDate);
              return expiryDate <= thirtyDaysFromNow;
            })
            .sort((a, b) => {
              const dateA = new Date(a.expiryDate);
              const dateB = new Date(b.expiryDate);
              return dateA - dateB;
            })
            .slice(0, 10); // Show only top 10 expiring items
        },

        get filteredProducts() {
          if (!this.searchQuery) return this.products;
          
          return this.products.filter(product => 
            product.brandName.toLowerCase().includes(this.searchQuery.toLowerCase()) ||
            product.genericName.toLowerCase().includes(this.searchQuery.toLowerCase()) ||
            product.category.toLowerCase().includes(this.searchQuery.toLowerCase())
          );
        },
        
        // Helper methods
        formatCurrency(amount) {
          return new Intl.NumberFormat('en-ZM', {
            style: 'currency',
            currency: 'ZMW'
          }).format(amount);
        },
        
        formatDate(dateString) {
          if (!dateString) return 'N/A';
          const date = new Date(dateString);
          return date.toLocaleDateString('en-ZM', {
            year: 'numeric',
            month: 'short',
            day: 'numeric'
          });
        },
        
        // Stocktaking/Cycle Counting methods
        stocktakeSessions: [],
        currentStocktake: null,

        startStocktake(type = 'full') {
          const stocktakeSession = {
            id: this.generateStocktakeId(),
            type: type, // 'full', 'cycle', 'category'
            date: new Date(),
            status: 'in_progress',
            items: this.prepareStocktakeItems(type),
            discrepancies: [],
            completedBy: this.userInfo.name,
            startedAt: new Date()
          };

          this.currentStocktake = stocktakeSession;
          this.stocktakeSessions.push(stocktakeSession);
          this.showStocktakeModal(stocktakeSession);
        },

        generateStocktakeId() {
          const date = new Date();
          const year = date.getFullYear();
          const month = String(date.getMonth() + 1).padStart(2, '0');
          const sequence = this.stocktakeSessions.length + 1;
          return `ST-${year}${month}-${String(sequence).padStart(4, '0')}`;
        },

        prepareStocktakeItems(type) {
          let items = [...this.products];
          
          if (type === 'cycle') {
            // For cycle counting, select a subset of items
            items = items
              .filter(item => item.stockQuantity <= (item.lowStockThreshold || 10))
              .slice(0, 20); // Limit to 20 items for cycle count
          } else if (type === 'category') {
            // For category counting, you could filter by specific category
            // For now, we'll use all items
          }

          return items.map(item => ({
            ...item,
            countedQuantity: null,
            discrepancy: null,
            notes: '',
            status: 'pending'
          }));
        },

        showStocktakeModal(stocktakeSession) {
          const modal = document.getElementById('stocktakeModal');
          const modalBody = modal.querySelector('.stocktake-content');
          
          modalBody.innerHTML = `
            <div class="stocktake-header">
              <div class="stocktake-info">
                <h3>Stocktake #${stocktakeSession.id}</h3>
                <p>Type: ${stocktakeSession.type} | Started: ${this.formatDate(stocktakeSession.startedAt)}</p>
                <p>Items to count: ${stocktakeSession.items.length}</p>
              </div>
              <div class="stocktake-progress">
                <div class="progress-bar">
                  <div class="progress-fill" style="width: ${this.calculateStocktakeProgress(stocktakeSession)}%"></div>
                </div>
                <span>${this.calculateStocktakeProgress(stocktakeSession)}% Complete</span>
              </div>
            </div>
            <div class="stocktake-items" id="stocktakeItemsContainer">
              ${stocktakeSession.items.map((item, index) => `
                <div class="stocktake-item" data-index="${index}">
                  <div class="item-info">
                    <div class="item-name">${item.brandName}</div>
                    <div class="item-details">${item.genericName} ${item.strength || ''}</div>
                    <div class="item-location">Location: ${item.location || 'Main Store'}</div>
                  </div>
                  <div class="item-counting">
                    <div class="system-count">
                      <label>System Count:</label>
                      <span>${item.stockQuantity}</span>
                    </div>
                    <div class="actual-count">
                      <label>Actual Count:</label>
                      <input type="number" 
                             data-index="${index}"
                             min="0" 
                             placeholder="Enter count"
                             value="${item.countedQuantity || ''}">
                    </div>
                    <div class="discrepancy" style="display: ${item.discrepancy ? 'block' : 'none'}">
                      <span class="discrepancy-amount ${item.discrepancy > 0 ? 'positive' : item.discrepancy < 0 ? 'negative' : ''}">
                        ${item.discrepancy > 0 ? '+' : ''}${item.discrepancy || ''}
                      </span>
                    </div>
                  </div>
                  <div class="item-notes">
                    <textarea data-index="${index}"
                              placeholder="Add notes about this item..."
                              rows="2">${item.notes || ''}</textarea>
                  </div>
                </div>
              `).join('')}
            </div>
          `;
          
          // Add event listeners for the dynamically created inputs
          modalBody.querySelectorAll('input[type="number"]').forEach(input => {
            input.addEventListener('change', (e) => {
              const index = parseInt(e.target.dataset.index);
              this.updateStocktakeItem(index, parseInt(e.target.value) || null);
            });
          });

          modalBody.querySelectorAll('textarea').forEach(textarea => {
            textarea.addEventListener('input', (e) => {
              const index = parseInt(e.target.dataset.index);
              if (this.currentStocktake && this.currentStocktake.items[index]) {
                this.currentStocktake.items[index].notes = e.target.value;
              }
            });
          });
          
          modal.hidden = false;
          document.getElementById('modalOverlay').hidden = false;
        },

        calculateStocktakeProgress(stocktakeSession) {
          const completed = stocktakeSession.items.filter(item => item.countedQuantity !== null).length;
          return Math.round((completed / stocktakeSession.items.length) * 100);
        },

        updateStocktakeItem(itemIndex, countedQuantity) {
          const item = this.currentStocktake.items[itemIndex];
          if (item) {
            item.countedQuantity = countedQuantity;
            if (countedQuantity !== null) {
              item.discrepancy = countedQuantity - item.stockQuantity;
              item.status = 'completed';
              
              if (item.discrepancy !== 0) {
                this.currentStocktake.discrepancies.push({
                  productId: item.id,
                  productName: item.brandName,
                  systemCount: item.stockQuantity,
                  actualCount: countedQuantity,
                  discrepancy: item.discrepancy,
                  notes: item.notes
                });
              }

              // Update the UI to show the discrepancy
              const stocktakeItem = document.querySelector(`.stocktake-item[data-index="${itemIndex}"]`);
              if (stocktakeItem) {
                stocktakeItem.classList.add('completed');
                const discrepancyDiv = stocktakeItem.querySelector('.discrepancy');
                const discrepancySpan = stocktakeItem.querySelector('.discrepancy-amount');
                
                if (discrepancyDiv && discrepancySpan) {
                  discrepancyDiv.style.display = 'block';
                  discrepancySpan.textContent = (item.discrepancy > 0 ? '+' : '') + item.discrepancy;
                  discrepancySpan.className = `discrepancy-amount ${item.discrepancy > 0 ? 'positive' : item.discrepancy < 0 ? 'negative' : ''}`;
                }

                // Update progress
                const progress = this.calculateStocktakeProgress(this.currentStocktake);
                const progressFill = document.querySelector('.progress-fill');
                const progressText = document.querySelector('.stocktake-progress span');
                
                if (progressFill) progressFill.style.width = `${progress}%`;
                if (progressText) progressText.textContent = `${progress}% Complete`;
              }
            }
          }
        },

        completeStocktake() {
          if (this.currentStocktake) {
            this.currentStocktake.status = 'completed';
            this.currentStocktake.completedAt = new Date();
            
            // Update inventory with actual counts
            this.currentStocktake.items.forEach(item => {
              if (item.countedQuantity !== null && item.countedQuantity !== item.stockQuantity) {
                this.updateStockQuantity(item.id, item.countedQuantity, 'Stocktake adjustment');
              }
            });
            
            this.showSuccess(`Stocktake ${this.currentStocktake.id} completed successfully`);
            this.closeStocktakeModal();
            
            // Generate stocktake report
            this.generateStocktakeReport(this.currentStocktake);
          }
        },

        generateStocktakeReport(stocktakeSession) {
          const report = {
            id: stocktakeSession.id,
            date: stocktakeSession.date,
            type: stocktakeSession.type,
            totalItems: stocktakeSession.items.length,
            completedItems: stocktakeSession.items.filter(item => item.status === 'completed').length,
            discrepancies: stocktakeSession.discrepancies,
            totalValue: this.calculateStocktakeValue(stocktakeSession),
            completedBy: stocktakeSession.completedBy
          };

          // In production, this would save the report and allow export
          console.log('Stocktake Report:', report);
          this.showInfo('Stocktake report generated and saved');
        },

        calculateStocktakeValue(stocktakeSession) {
          return stocktakeSession.discrepancies.reduce((total, disc) => {
            const product = this.products.find(p => p.id === disc.productId);
            return total + (Math.abs(disc.discrepancy) * (product?.costPrice || 0));
          }, 0);
        },

        closeStocktakeModal() {
          document.getElementById('stocktakeModal').hidden = true;
          document.getElementById('modalOverlay').hidden = true;
          this.currentStocktake = null;
        },

        // Purchase management methods
        suppliers: [
          { id: 1, name: 'PharmaSupply Ltd', contact: '+260-211-123456', email: 'orders@pharmasupply.zm', leadTime: 7 },
          { id: 2, name: 'MedSource International', contact: '+260-211-789012', email: 'info@medsource.zm', leadTime: 14 },
          { id: 3, name: 'HealthCare Distributors', contact: '+260-211-345678', email: 'sales@healthdist.zm', leadTime: 10 },
          { id: 4, name: 'Zambia Medical Supplies', contact: '+260-211-901234', email: 'orders@zamedic.zm', leadTime: 5 }
        ],

        purchaseOrders: [],

        createPurchaseOrder(reorderItems) {
          // Group items by supplier for efficient ordering
          const ordersBySupplier = this.groupItemsBySupplier(reorderItems);
          
          const purchaseOrder = {
            id: this.generatePurchaseOrderId(),
            date: new Date(),
            status: 'pending',
            items: reorderItems,
            supplierOrders: ordersBySupplier,
            totalCost: reorderItems.reduce((sum, item) => sum + item.estimatedCost, 0),
            expectedDelivery: this.calculateExpectedDelivery(ordersBySupplier)
          };

          this.purchaseOrders.push(purchaseOrder);
          this.showPurchaseOrderModal(purchaseOrder);
        },

        groupItemsBySupplier(items) {
          const grouped = {};
          
          items.forEach(item => {
            const supplier = item.supplier || 'PharmaSupply Ltd'; // Default supplier
            if (!grouped[supplier]) {
              grouped[supplier] = {
                supplier: this.suppliers.find(s => s.name === supplier) || this.suppliers[0],
                items: [],
                subtotal: 0
              };
            }
            grouped[supplier].items.push(item);
            grouped[supplier].subtotal += item.estimatedCost;
          });

          return Object.values(grouped);
        },

        calculateExpectedDelivery(supplierOrders) {
          const maxLeadTime = Math.max(...supplierOrders.map(order => order.supplier.leadTime));
          const deliveryDate = new Date();
          deliveryDate.setDate(deliveryDate.getDate() + maxLeadTime);
          return deliveryDate;
        },

        generatePurchaseOrderId() {
          const date = new Date();
          const year = date.getFullYear();
          const month = String(date.getMonth() + 1).padStart(2, '0');
          const sequence = this.purchaseOrders.length + 1;
          return `PO-${year}${month}-${String(sequence).padStart(4, '0')}`;
        },

        showPurchaseOrderModal(purchaseOrder) {
          const modal = document.getElementById('purchaseOrderModal');
          const modalBody = modal.querySelector('.purchase-order-details');
          
          modalBody.innerHTML = `
            <div class="order-header">
              <div class="order-info">
                <h3>Order #${purchaseOrder.id}</h3>
                <p>Date: ${this.formatDate(purchaseOrder.date)}</p>
                <p>Status: <span class="status-badge">${purchaseOrder.status}</span></p>
                <p>Expected Delivery: ${this.formatDate(purchaseOrder.expectedDelivery)}</p>
              </div>
              <div class="order-total">
                <h4>Total Cost</h4>
                <div class="total-amount">${this.formatCurrency(purchaseOrder.totalCost)}</div>
              </div>
            </div>
            <div class="supplier-orders">
              ${purchaseOrder.supplierOrders.map(supplierOrder => `
                <div class="supplier-order">
                  <h4>${supplierOrder.supplier.name}</h4>
                  <p>Contact: ${supplierOrder.supplier.contact} | Lead Time: ${supplierOrder.supplier.leadTime} days</p>
                  <div class="order-items">
                    ${supplierOrder.items.map(item => `
                      <div class="order-item">
                        <div class="item-details">
                          <div class="item-name">${item.brandName}</div>
                          <div class="item-specs">${item.genericName} ${item.strength || ''}</div>
                        </div>
                        <div class="item-quantity">Qty: ${item.suggestedOrder}</div>
                        <div class="item-cost">${this.formatCurrency(item.estimatedCost)}</div>
                      </div>
                    `).join('')}
                  </div>
                  <div class="supplier-subtotal">
                    Subtotal: ${this.formatCurrency(supplierOrder.subtotal)}
                  </div>
                </div>
              `).join('')}
            </div>
          `;
          
          modal.hidden = false;
          document.getElementById('modalOverlay').hidden = false;
        },

        confirmPurchaseOrder(purchaseOrderId) {
          const order = this.purchaseOrders.find(po => po.id === purchaseOrderId);
          if (order) {
            order.status = 'confirmed';
            this.showSuccess(`Purchase Order ${purchaseOrderId} confirmed and sent to suppliers`);
            
            // Update stock expectations
            order.items.forEach(item => {
              const product = this.products.find(p => p.id === item.id);
              if (product) {
                product.expectedStock = (product.expectedStock || 0) + item.suggestedOrder;
                product.expectedDelivery = order.expectedDelivery;
              }
            });
            
            // Close modal and refresh
            document.getElementById('purchaseOrderModal').hidden = true;
            document.getElementById('modalOverlay').hidden = true;
          }
        },

        // Reordering system methods
        get productsNeedingReorder() {
          return this.products.filter(product => {
            return product.stockQuantity <= (product.lowStockThreshold || 10) && product.stockQuantity > 0;
          }).sort((a, b) => {
            // Sort by urgency (lowest stock first)
            const aRatio = a.stockQuantity / (a.lowStockThreshold || 10);
            const bRatio = b.stockQuantity / (b.lowStockThreshold || 10);
            return aRatio - bRatio;
          });
        },

        createReorderList() {
          const reorderProducts = this.productsNeedingReorder;
          if (reorderProducts.length === 0) {
            this.showInfo('No products need reordering at this time');
            return;
          }

          // Generate reorder list with suggested quantities
          const reorderList = reorderProducts.map(product => {
            const suggestedOrder = this.calculateSuggestedOrderQuantity(product);
            return {
              ...product,
              suggestedOrder: suggestedOrder,
              urgency: this.calculateUrgency(product),
              estimatedCost: suggestedOrder * product.costPrice
            };
          });

          this.showReorderModal(reorderList);
        },

        calculateSuggestedOrderQuantity(product) {
          const currentStock = product.stockQuantity;
          const threshold = product.lowStockThreshold || 10;
          const monthlyUsage = this.estimateMonthlyUsage(product.id);
          
          // Suggest enough to reach 3x threshold or cover 3 months of usage
          const targetStock = Math.max(threshold * 3, monthlyUsage * 3);
          return Math.max(targetStock - currentStock, threshold);
        },

        calculateUrgency(product) {
          const currentStock = product.stockQuantity;
          const threshold = product.lowStockThreshold || 10;
          
          if (currentStock === 0) return 'critical';
          if (currentStock <= threshold * 0.5) return 'high';
          if (currentStock <= threshold) return 'medium';
          return 'low';
        },

        estimateMonthlyUsage(productId) {
          // Calculate average monthly usage from stock history
          const productHistory = this.stockHistory.filter(h => h.id === productId);
          if (productHistory.length < 2) return 10; // Default estimate

          // Simple estimation based on recent stock changes
          const recentChanges = productHistory.slice(-10);
          const totalChange = recentChanges.reduce((sum, change) => {
            return sum + (change.oldQuantity - change.newQuantity);
          }, 0);
          
          return Math.abs(totalChange) / Math.min(recentChanges.length, 3);
        },

        showReorderModal(reorderList) {
          // Show reorder modal with the list
          const modal = document.getElementById('reorderModal');
          const modalBody = modal.querySelector('.reorder-list');
          
          modalBody.innerHTML = reorderList.map(product => `
            <div class="reorder-item urgency-${product.urgency}">
              <div class="reorder-product-info">
                <div class="reorder-product-name">${product.brandName}</div>
                <div class="reorder-product-details">${product.genericName} ${product.strength || ''}</div>
                <div class="reorder-stock-info">
                  Current: ${product.stockQuantity} | Min: ${product.lowStockThreshold || 10}
                </div>
              </div>
              <div class="reorder-suggestion">
                <div class="suggested-quantity">Suggested: ${product.suggestedOrder}</div>
                <div class="estimated-cost">${this.formatCurrency(product.estimatedCost)}</div>
                <div class="urgency-badge urgency-${product.urgency}">${product.urgency}</div>
              </div>
            </div>
          `).join('');
          
          modal.hidden = false;
          document.getElementById('modalOverlay').hidden = false;
        },

        processReorder(reorderData) {
          // Create purchase order from reorder list
          this.createPurchaseOrder(this.productsNeedingReorder);
        },

        // Barcode integration methods
        generateBarcode(productId, productCode) {
          // Generate a simple barcode representation (in production, use a proper barcode library)
          const barcodeData = {
            id: productId,
            code: productCode,
            timestamp: new Date().toISOString(),
            type: 'CODE128'
          };
          
          // Create barcode data URL (placeholder for actual barcode generation)
          const barcodeCanvas = document.createElement('canvas');
          barcodeCanvas.width = 200;
          barcodeCanvas.height = 100;
          const ctx = barcodeCanvas.getContext('2d');
          
          // Simple barcode visualization (replace with actual barcode library)
          ctx.fillStyle = '#000';
          ctx.fillRect(10, 10, 180, 80);
          ctx.fillStyle = '#fff';
          ctx.font = '12px monospace';
          ctx.fillText(productCode, 20, 95);
          
          return barcodeCanvas.toDataURL();
        },

        scanBarcode() {
          // Initialize barcode scanner (in production, integrate with actual scanner API)
          if (navigator.mediaDevices && navigator.mediaDevices.getUserMedia) {
            navigator.mediaDevices.getUserMedia({ video: { facingMode: 'environment' } })
              .then(stream => {
                // Handle camera stream for barcode scanning
                this.showSuccess('Barcode scanner initialized');
                // Here you would integrate with a barcode scanning library
                // such as QuaggaJS or ZXing
              })
              .catch(error => {
                console.error('Camera access denied:', error);
                this.showError('Camera access required for barcode scanning');
              });
          } else {
            this.showError('Barcode scanning not supported on this device');
          }
        },

        searchByBarcode(barcode) {
          // Search product by barcode
          const product = this.products.find(p => p.barcode === barcode || p.id === barcode);
          if (product) {
            this.searchQuery = product.brandName;
            this.showSuccess(`Found: ${product.brandName}`);
            return product;
          } else {
            this.showError('Product not found for this barcode');
            return null;
          }
        },

        printBarcode(productId, quantity = 1) {
          const product = this.products.find(p => p.id === productId);
          if (product) {
            const barcodeUrl = this.generateBarcode(product.id, product.id);
            
            // Create print window for barcode labels
            const printWindow = window.open('', '_blank');
            printWindow.document.write(`
              <html>
                <head>
                  <title>Barcode Labels - ${product.brandName}</title>
                  <style>
                    body { font-family: Arial, sans-serif; margin: 20px; }
                    .barcode-label { 
                      border: 1px solid #ccc; 
                      padding: 10px; 
                      margin: 5px; 
                      text-align: center; 
                      width: 200px; 
                      display: inline-block;
                    }
                    .barcode-image { width: 180px; height: 80px; }
                    .product-name { font-weight: bold; margin-bottom: 5px; }
                    .product-details { font-size: 12px; color: #666; }
                    .barcode-code { font-family: monospace; margin-top: 5px; }
                  </style>
                </head>
                <body>
                  <h2>Barcode Labels for ${product.brandName}</h2>
                  ${Array(quantity).fill(0).map(() => `
                    <div class="barcode-label">
                      <div class="product-name">${product.brandName}</div>
                      <div class="product-details">${product.genericName} ${product.strength || ''}</div>
                      <img src="${barcodeUrl}" class="barcode-image" alt="Barcode">
                      <div class="barcode-code">${product.id}</div>
                    </div>
                  `).join('')}
                  <script>
                    window.onload = function() { window.print(); }
                  </script>
                </body>
              </html>
            `);
            printWindow.document.close();
            
            this.showSuccess(`Generated ${quantity} barcode label(s) for ${product.brandName}`);
          }
        },

        // Expiry date management methods
        isExpiryCritical(expiryDate) {
          if (!expiryDate) return false;
          const expiry = new Date(expiryDate);
          const thirtyDaysFromNow = new Date();
          thirtyDaysFromNow.setDate(thirtyDaysFromNow.getDate() + 30);
          return expiry <= thirtyDaysFromNow;
        },

        isExpiryWarning(expiryDate) {
          if (!expiryDate) return false;
          const expiry = new Date(expiryDate);
          const ninetyDaysFromNow = new Date();
          ninetyDaysFromNow.setDate(ninetyDaysFromNow.getDate() + 90);
          const thirtyDaysFromNow = new Date();
          thirtyDaysFromNow.setDate(thirtyDaysFromNow.getDate() + 30);
          return expiry <= ninetyDaysFromNow && expiry > thirtyDaysFromNow;
        },

        getExpiryDays(expiryDate) {
          if (!expiryDate) return '';
          const expiry = new Date(expiryDate);
          const today = new Date();
          const diffTime = expiry - today;
          const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
          
          if (diffDays < 0) {
            return `Expired ${Math.abs(diffDays)} days ago`;
          } else if (diffDays === 0) {
            return 'Expires today';
          } else if (diffDays <= 30) {
            return `${diffDays} days left`;
          } else if (diffDays <= 90) {
            return `${diffDays} days left`;
          } else {
            return '';
          }
        },

        // Product management methods
        editProduct(product) {
          this.editingProduct = product;
          this.productForm = {
            brandName: product.brandName,
            genericName: product.genericName,
            category: product.category,
            stockQuantity: product.stockQuantity,
            lowStockThreshold: product.lowStockThreshold,
            costPrice: product.costPrice,
            sellingPrice: product.sellingPrice,
            expiryDate: product.expiryDate
          };
          this.showAddModal = true;
        },
        
        deleteProduct(product) {
          if (confirm(`Are you sure you want to delete ${product.brandName}?`)) {
            try {
              window.adminAPI.deleteProduct(product.id)
                .then(() => {
                  this.showSuccess('Product deleted successfully');
                  this.loadInventoryFromAPI();
                })
                .catch(error => {
                  console.error('Error deleting product:', error);
                  this.showError('Failed to delete product');
                });
            } catch (error) {
              console.error('API not available:', error);
              this.showError('Failed to delete product');
            }
          }
        },

        get totalProducts() {
          return this.products.length;
        },

        get inStockCount() {
          return this.products.filter(p => p.stock > 20).length;
        },

        get lowStockCount() {
          return this.products.filter(p => p.stock <= 20 && p.stock > 0).length;
        },

        get totalValue() {
          return this.products.reduce((total, product) => total + (product.stock * product.price), 0);
        },

        getStockClass(stock) {
          if (stock === 0) return 'out-of-stock';
          if (stock <= 20) return 'low-stock';
          return 'in-stock';
        },

        formatCurrency(amount) {
          return new Intl.NumberFormat('en-ZM', {
            style: 'currency',
            currency: 'ZMW'
          }).format(amount);
        },

        logout() {
          if (confirm('Are you sure you want to logout?')) {
            window.location.href = 'index.html';
          }
        },

        canManageBranches() {
          const subscription = JSON.parse(localStorage.getItem('umi_subscription') || '{}');
          const planType = subscription.planType || 'Care';
          
          const tierConfig = {
            'Care': { maxBranches: 1 },
            'Care Plus': { maxBranches: 3 },
            'Care Pro': { maxBranches: 10 }
          };
          
          return tierConfig[planType] ? tierConfig[planType].maxBranches > 1 : false;
        }
      }
    }
  </script>

