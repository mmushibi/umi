{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=Umi_db;Username=postgres;Password=root;",
    "TenantConnectionTemplate": "Host=localhost;Database={0};Username=postgres;Password=root;"
  },
  "Jwt": {
    "Issuer": "UmiHealthApi",
    "Audience": "UmiHealthApi",
    "Note": "In production, generate and store RSA keys securely",
    "PrivateKeyPem": "",
    "PublicKeyPem": ""
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "RateLimiting": {
    "Auth": {
      "PermitLimit": 5,
      "Window": "00:01:00",
      "SegmentPerIp": 2
    },
    "Read": {
      "PermitLimit": 100,
      "Window": "00:01:00"
    },
    "Write": {
      "PermitLimit": 50,
      "Window": "00:01:00"
    }
  }
}
