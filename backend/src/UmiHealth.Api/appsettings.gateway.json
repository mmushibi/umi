{
  "ApiGateway": {
    "Services": {
      "auth-service": {
        "Endpoints": [
          "http://localhost:5001",
          "http://localhost:5002"
        ],
        "LoadBalancingStrategy": "RoundRobin"
      },
      "user-service": {
        "Endpoints": [
          "http://localhost:5101",
          "http://localhost:5102"
        ],
        "LoadBalancingStrategy": "LeastConnections"
      },
      "patient-service": {
        "Endpoints": [
          "http://localhost:5201"
        ],
        "LoadBalancingStrategy": "RoundRobin"
      },
      "inventory-service": {
        "Endpoints": [
          "http://localhost:5301",
          "http://localhost:5302",
          "http://localhost:5303"
        ],
        "LoadBalancingStrategy": "Weighted"
      },
      "sales-service": {
        "Endpoints": [
          "http://localhost:5401",
          "http://localhost:5402"
        ],
        "LoadBalancingStrategy": "RoundRobin"
      },
      "payment-service": {
        "Endpoints": [
          "http://localhost:5501"
        ],
        "LoadBalancingStrategy": "RoundRobin"
      },
      "prescription-service": {
        "Endpoints": [
          "http://localhost:5601"
        ],
        "LoadBalancingStrategy": "RoundRobin"
      },
      "subscription-service": {
        "Endpoints": [
          "http://localhost:5701"
        ],
        "LoadBalancingStrategy": "RoundRobin"
      },
      "tenant-service": {
        "Endpoints": [
          "http://localhost:5801"
        ],
        "LoadBalancingStrategy": "RoundRobin"
      },
      "report-service": {
        "Endpoints": [
          "http://localhost:5901"
        ],
        "LoadBalancingStrategy": "LeastConnections"
      }
    },
    "HealthCheck": {
      "Interval": "00:00:30",
      "Timeout": "00:00:05",
      "UnhealthyThreshold": 3,
      "HealthyThreshold": 2
    },
    "CircuitBreaker": {
      "FailureThreshold": 5,
      "DurationOfBreak": "00:01:00",
      "SamplingDuration": "00:00:30"
    }
  }
}
