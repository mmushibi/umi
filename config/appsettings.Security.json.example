{
  "Security": {
    "RateLimiting": {
      "DefaultRequestsPerMinute": 100,
      "AuthRequestsPerMinute": 10,
      "ReadRequestsPerMinute": 200,
      "WriteRequestsPerMinute": 50,
      "PremiumRequestsPerMinute": 500,
      "DefaultWindowSizeMinutes": 1,
      "DefaultSegmentsPerWindow": 10,
      "AuthSegmentsPerWindow": 2,
      "WriteSegmentsPerWindow": 5,
      "PremiumSegmentsPerWindow": 20
    },
    "CORS": {
      "AllowedOrigins": [
        "http://localhost:3000",
        "https://localhost:3000",
        "https://umihealth.com",
        "https://www.umihealth.com"
      ],
      "AllowedMethods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS"
      ],
      "AllowedHeaders": [
        "Content-Type",
        "Authorization",
        "X-Requested-With",
        "X-Version",
        "X-CSRF-Token"
      ],
      "PreflightMaxAgeHours": 1,
      "AllowCredentials": true
    },
    "ContentSecurityPolicy": {
      "DefaultSrc": "'self'",
      "ScriptSrc": "'self' 'unsafe-inline' 'unsafe-eval'",
      "StyleSrc": "'self' 'unsafe-inline'",
      "ImgSrc": "'self' data: https:",
      "ConnectSrc": "'self' wss:",
      "FontSrc": "'self' data:",
      "FrameAncestors": "'none'",
      "BaseUri": "'self'",
      "FormAction": "'self'"
    },
    "InputValidation": {
      "MaxRequestSizeBytes": 10485760,
      "EnableXssProtection": true,
      "EnableSqlInjectionProtection": true,
      "SkippedPaths": [
        "/health",
        "/swagger",
        "/hangfire",
        "/upload",
        "/export"
      ]
    },
    "HTTPS": {
      "RequireHttps": true,
      "EnableHsts": true,
      "HstsMaxAgeDays": 365,
      "HstsIncludeSubDomains": true,
      "HstsPreload": true
    },
    "Session": {
      "JwtExpirationMinutes": 60,
      "RefreshTokenExpirationDays": 7,
      "RequireHttpsForTokens": true,
      "EnableTokenBlacklist": true,
      "MaxFailedAttempts": 5,
      "LockoutMinutes": 15
    },
    "Encryption": {
      "EnableDataEncryption": true,
      "EncryptionAlgorithm": "AES-256-GCM",
      "KeySizeBits": 256,
      "IvSizeBytes": 12,
      "TagSizeBytes": 16
    }
  },
  "Encryption": {
    "Key": "${ENCRYPTION_KEY}"
  }
}
